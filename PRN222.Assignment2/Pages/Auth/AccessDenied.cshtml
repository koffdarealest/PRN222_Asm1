@page
@model PRN222.Assignment2.Pages.Auth.AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJwK6uF4NxXo8vKZFRuO0vsJdbQepK5D4OtflbmLUa0Fq1pxcX8f8FzctgQU" crossorigin="anonymous">
    <style>
        .access-denied-container {
            max-width: 600px;
            margin: 100px auto;
            text-align: center;
        }

        .access-denied-container h1 {
            font-size: 5rem;
            font-weight: bold;
            color: #ff6f61;
        }

        .access-denied-container p {
            font-size: 1.25rem;
            color: #555;
        }

        .access-denied-container .btn {
            background-color: #ff6f61;
            color: white;
            border: none;
            font-size: 1.1rem;
        }

        .access-denied-container .btn:hover {
            background-color: #e05e4a;
        }

        .access-denied-container .icon {
            font-size: 4rem;
            color: #ff6f61;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="access-denied-container">
            <div class="icon">
                <i class="bi bi-exclamation-circle"></i>
            </div>
            <h1>403</h1>
            <p>You don't have permission to access this page.</p>
            <a href="/" class="btn">Go Back to Home</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-pzjw8f+ua7Kw1TIq0v8FqZkssNf1R+3C5aPlF+re4aArA6k9lP2jz1nP1B5J0H7e" crossorigin="anonymous"></script>
</body>
</html>
