@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model PRN222.Assignment2.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Login";
}


@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5 col-lg-4">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-4">
                    <h3 class="text-center text-primary mb-4">Login</h3>
                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label">Username</label>
                            <input type="text" class="form-control" asp-for="@Model.LoginViewModel.Username" required />
                            <span class="text-danger small" asp-validation-for="@Model.LoginViewModel.Username"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Password</label>
                            <input type="password" class="form-control" asp-for="@Model.LoginViewModel.Password" required />
                            <span class="text-danger small" asp-validation-for="@Model.LoginViewModel.Password"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Login</button>
                    </form>
                    <div class="text-center mt-3">
                        <a href="#" class="text-decoration-none">Forgot password?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
