@model AttendCreateViewModel
@{
    ViewData["Title"] = "Attend an Event";
}



<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-4">
                    <a href="@Url.Action("Index", "Event")">← Back</a>
                    <h3>Attend an Event</h3>
                    <form asp-action="Attend" method="post">
                        <div class="form-group mt-3">
                            <label for="EventId">Event</label>
                            <input type="text" class="form-control" name="EventId" value="@Model.EventTitle" disabled/>
                        </div>
                        <div class="form-group mt-3">
                            <label for="Name">Name</label>
                            <input type="text" class="form-control" id="Name" name="Name" required/>
                        </div>
                        <div class="form-group mt-3">
                            <label for="Email">Email</label>
                            <input type="email" class="form-control" id="Email" name="Email" required/>
                        </div>
                        <div class="mt-3 d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary w-50">Attend this event</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
